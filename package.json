  },
  "bugs": {
    "url": "https://github.com/Xahau/JS-xPOP-Retrieve-Generate/issues"
  },
  "homepage": "https://github.com/Xahau/JS-xPOP-Retrieve-Generate/#readme",
  "license": "MIT",
  "dependencies": {
    "xpopgen": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "esmify": "^2.1.1",
    "terser": "^5.21.0"
  }
}
